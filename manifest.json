{
    "manifest_version": 3,
    "name": "Faceit Map Graph",
    "version": "1.0",
    "description": "Adds a map win graph in the faceit match room",
    "icons": {
        "48": "src/icons/cs2.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/scripts/faceit_map_graph.js"
            ]
        }
    ],
    "action": {
        "default_popup": "src/popups/popup.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}